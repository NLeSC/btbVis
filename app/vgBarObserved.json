{
  "width": 400,
  "height": 200,
  "padding": {
    "top": 10,
    "left": 50,
    "bottom": 30,
    "right": 10
  },
  "data": [
    {
      "name": "table",
      "url": "contribDummy.json",
      "format": { "type": "json" }
    }
  ],
  "scales": [{
    "name": "x",
    "type": "ordinal",
    "range": "width",
    "domain": {
      "data": "table",
      "field": "data.country"
    }
  }, {
    "name": "y",
    "range": "height",
    "nice": true,
    "domainMin": 0,
    "domainMax": 1
  }],
  "axes": [{
    "type": "x",
    "scale": "x"
  }, {
    "type": "y",
    "scale": "y"
  }],
  "marks": [{
    "type": "rect",
    "from": {
      "data": "table"
    },
    "properties": {
      "enter": {
        "x": {
          "scale": "x",
          "field": "data.country"
        },
        "width": {
          "scale": "x",
          "band": true,
          "offset": -1
        },
        "y": {
          "scale": "y",
          "field": "data.observed"
        },
        "y2": {
          "scale": "y",
          "value": 0
        }
      },
      "update": {
        "fill": {
          "value": "steelblue"
        }
      },
      "hover": {
        "fill": {
          "value": "red"
        }
      }
    }
  }]
}
